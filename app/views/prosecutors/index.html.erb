<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"> Listando procuradores</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @prosecutors.each do |prosecutor| %>
          <tr>
            <td><%= prosecutor.name %></td>
            <td><%= link_to 'Show', prosecutor %></td>
            <td><%= link_to 'Edit', edit_prosecutor_path(prosecutor) %></td>
            <td><%= link_to 'Destroy', prosecutor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= button_to 'Adicionar', new_prosecutor_path, class: 'btn btn-success', method: :get %>
