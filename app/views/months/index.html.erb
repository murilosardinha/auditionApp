<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"> Listando meses</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Year</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @months.each do |month| %>
          <tr>
            <td><%= month.name %></td>
            <td><%= month.year %></td>
            <td><%= link_to 'Show', month %></td>
            <td><%= link_to 'Edit', edit_month_path(month) %></td>
            <td><%= link_to 'Destroy', month, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

<%= button_to 'Adicionar', new_month_path, class: 'btn btn-success', method: :get %>
